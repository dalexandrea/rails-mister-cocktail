<div id="cocktail_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path "back_cocktail_lkrsuc.jpg", crop: :scale%>)">
  <div class="container text-center">
    <h1 style="color: white"> New Cocktail </h1>

    <div class="row">
      <div class="col-sm-4 col-sm-offset-4" style="color: white">
        <%=  simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit 'Make', class: "btn btn-primary" %>
        <% end %>
        <%= button_to "Back to all", cocktails_path, class: "btn btn-primary", :method => "get" %>
      </div>
    </div>
  </div>
</div>

