<div class="container text-center">
  <h1> New Cocktail </h1>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%=  simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.submit %>
      <%= button_to "Back to all", cocktails_path, :class => "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
